@model IEnumerable<SalaoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Dados do Salão de Cabeleireiro</h1>
        <a class="btn btn-success mx-2" asp-controller="Dados" asp-action="Cadastrar">Cadastrar novo dado</a>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">NomeCliente</th>
                <th scope="col">NomeFuncionario</th>
                <th scope="col">Servico</th>
                <th scope="col">Horario</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var salao in Model)
                {
                    <tr>
                        <th scope="row">@salao.NomeCliente</th>
                        <td>@salao.NomeFuncionario</td>
                        <td>@salao.Servico</td>
                        <td>@salao.Horario</td>
                        <td>
                            <a asp-controller="Dados" asp-action="Editar" asp-route-id="@salao.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Dados" asp-action="Excluir" asp-route-id="@salao.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>